---
interface Props {
  name: string;
  count: number;
}

const { name, count } = Astro.props;

const colors = [
  'bg-red-500',
  'bg-blue-500',
  'bg-green-500',
  'bg-yellow-500',
  'bg-purple-500',
  'bg-pink-500',
  'bg-indigo-500',
];

const randomColor = colors[Math.floor(Math.random() * colors.length)];
---

<a href={`/tags/${name}`} class={`inline-block ${randomColor} text-white font-bold py-2 px-4 m-2 transform rotate-1 hover:rotate-0 transition-transform duration-200 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]`}>
  {name} <span class="ml-2 bg-white text-black px-2 py-1 rounded-full text-sm">{count}</span>
</a>