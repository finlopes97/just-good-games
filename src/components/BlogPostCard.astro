---
const { title, url, pubDate, description } = Astro.props;
---
<div class="w-80 h-full p-2 border-black border-2 shadow-[2px_2px_0px_rgba(0,0,0,1)] md:shadow-[4px_4px_0px_rgba(0,0,0,1)] md:hover:shadow-[2px_2px_0px_rgba(0,0,0,1)] transition ease-in-out duration-500 bg-white">
	<a href={url} class="block cursor-pointer">
		 <article class="w-full h-full">
				<figure class="w-full h-1/2 border-black border-b-2">
					<h1 class="text-[18px] font-heading mb-4">{title}</h1>
				</figure>
				<div class="px-2 py-5 text-left h-full">
					 <p class="text-base mb-4">{pubDate}</p>
					 <p class="text-xs mb-4 line-clamp-4">
						{description}
					 </p>
					 <strong>Read More</strong>
				</div>
		 </article>
	</a>
</div>