---
import BlogPost from "../components/BlogPost.astro";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("posts");
const title = "Archive";
---

<Layout title={title}>
  <div>
    <h1 class="text-2xl text-center md:text-3xl lg:text-4xl font-heading">
      Archive.
    </h1>
    <hr class="bg-accent h-1 border-0 my-4" />
    <p class="text-center font-body">
      This site is currently under construction.
    </p>
    <ul>
      {
        allPosts.map((post) => (
          <BlogPost url={`/posts/${post.slug}/`} title={post.data.title} pubDate={post.data.pubDate.toISOString().slice(0, 10)} />
        ))
      }
    </ul>
  </div>
</Layout>
