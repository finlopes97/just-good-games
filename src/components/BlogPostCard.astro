---
const { title, url, pubDate, description, image } = Astro.props;
---
<div class="w-80
					h-full
					p-2
				border-black
					border-2
					bg-white
					shadow-[2px_2px_0px_rgba(0,0,0,1)]
					md:shadow-[4px_4px_0px_rgba(0,0,0,1)]
					md:hover:shadow-[2px_2px_0px_rgba(0,0,0,1)]
					transition ease-in-out duration-300
			  ">
	<a href={url} class="block cursor-pointer">
		 <article class="w-full h-full">
				<figure class="w-full h-40 border-black border-b-2 overflow-hidden">
					{image ? (
						<img src={image.url} alt={image.alt} class="w-full h-full object-cover" />
					) : (
						<div class="w-full h-full bg-gray-200 flex items-center justify-center">
              <span class="text-gray-400">No image</span>
            </div>
					)}
					<h1 class="text-xl font-heading mb-2">{title}</h1>
				</figure>
				<div class="px-2 py-2 text-left h-full">
					 <p class="text-base mb-4">{pubDate}</p>
					 <p class="text-xs mb-4 line-clamp-4">
						{description}
					 </p>
					 <strong class="hover:underline decoration-2 bottom-0 mt-auto">Read More</strong>
				</div>
		 </article>
	</a>
</div>